@model List<Instructor>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout1";
}

<h1 class="text-center ">Instructor data</h1>


<form action="/Instructor/search" method="get" >

    <input type="text" name="Name" class="form-control" />
    <input type="submit" value="Search" class="btn btn-outline-success mt-3 mb-3" />
</form>

<table class="table table-hover table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Image</th>
        <th>Action</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Salary</td>
        <td>@item.Address</td>
            <td> <img style="width: 50px;" class=" card-img-top" src="/images/@item.Image" alt="Card image" >  </td>

        <td><a class="btn btn-primary" href="/instructor/Details/@item.Id">View</a>
                <a class="btn btn-primary" href="/instructor/Edit/@item.Id">edit</a>

            </td>
        </tr>

    }

</table>
<a href="\Instructor\New" class="btn btn-success">Add</a>


